<!-- param1 :  role
     param2 : description
-->

<itc:report xmlns:itc="urn:itconductor">
  <itc:parameter name="fontSize">4</itc:parameter>
  <h1>Panasonic ${self/REPORT.Param2} Oracle DB Availability Report</h1>

<!-- this section is processing SAP system -->
  <itc:section>
    <itc:parameter name="OBJECT_ClassName">SAP</itc:parameter>
    <itc:parameter name="className">SAP</itc:parameter>
    <itc:select name="APPLICATION_Role">${self/REPORT.Param1}</itc:select>
    <itc:select name="OBJECT_OrganizationId ">${self/OBJECT_OrganizationId}</itc:select>
    <itc:select name="OBJECT_MaintenanceMode">false</itc:select>
    <itc:select name="SAP.DBMS" oper="NOT_NULL"></itc:select>


   <pbr />
   <!-- Oracle related  sections in here -->
   <h2>Oracle ${context/SAP.DBMS=&gt;OBJECT_Name} Availability</h2>
   <itc:threshold>
      <itc:parameter name="THRESHOLD_ObjectId">${context/SAP.DBMS}</itc:parameter>
      <itc:parameter name="THRESHOLD_AttributeName">OBJECT_Availability</itc:parameter>
      <itc:parameter name="title">true</itc:parameter>
      <itc:parameter name="table">false</itc:parameter>
      <itc:parameter name="timeScale">DAY</itc:parameter>
      <itc:parameter name="range">LM</itc:parameter>
      <itc:parameter name="fit">width</itc:parameter>
   </itc:threshold>
   <itc:threshold>
      <itc:parameter name="THRESHOLD_ObjectId">${context/SAP.DBMS}</itc:parameter>
      <itc:parameter name="THRESHOLD_AttributeName">OBJECT_Availability</itc:parameter>
      <itc:parameter name="title">true</itc:parameter>
      <itc:parameter name="table">true</itc:parameter>
      <itc:parameter name="valuesOnly">true</itc:parameter>
      <itc:parameter name="timeScale">DAY</itc:parameter>
      <itc:parameter name="range">LM</itc:parameter>
      <itc:parameter name="fit">width</itc:parameter>
   </itc:threshold>    

  </itc:section>

</itc:report>
