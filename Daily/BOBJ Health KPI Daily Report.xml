<!-- Parameter1 for SITE-->

<itc:report xmlns:itc="urn:itconductor">
   <h1>Business Objects System</h1>
   <itc:section>
      <itc:parameter name="className">BObjBI</itc:parameter>
      <itc:select name="APPLICATION_Role">${self/REPORT.Param1}</itc:select>
      <itc:select name="OBJECT_MaintenanceMode">false</itc:select>
      <h2>${context/OBJECT_Name}</h2>
      <h3>Availability</h3>
      <itc:threshold>
         <itc:parameter name="THRESHOLD_ObjectId">${context/OBJECT_Id}</itc:parameter>
         <itc:parameter name="THRESHOLD_AttributeName">OBJECT_Availability</itc:parameter>
         <itc:parameter name="title">false</itc:parameter>
         <itc:parameter name="timeScale">HOUR</itc:parameter>
         <itc:parameter name="range">H12</itc:parameter>
         <itc:parameter name="fit">width</itc:parameter>
         <itc:parameter name="valuesOnly">true</itc:parameter>
         <itc:parameter name="annotations">false</itc:parameter>
      </itc:threshold>

      <itc:section>
         <h2>BOBJ Enterprise Node</h2>
         <itc:parameter name="className">BOBJ_EnterpriseNode</itc:parameter>
         <itc:select name="APPLICATION_SERVICE.ApplicationId">${context/OBJECT_Id}</itc:select>
         <pbr />
         <h3>${context/BOBJ_SystemObject.Name}</h3>
         <h4>Is Alive</h4>
         <itc:threshold>
            <itc:parameter name="THRESHOLD_ObjectId">${context/OBJECT_Id}</itc:parameter>
            <itc:parameter name="THRESHOLD_AttributeName">BOBJ_EnterpriseNode.SI_SERVER_IS_ALIVE</itc:parameter>
            <itc:parameter name="title">false</itc:parameter>
            <itc:parameter name="timeScale">HOUR</itc:parameter>
            <itc:parameter name="range">H12</itc:parameter>
            <itc:parameter name="fit">width</itc:parameter>
            <itc:parameter name="valuesOnly">true</itc:parameter>
            <itc:parameter name="annotations">false</itc:parameter>
         </itc:threshold>
         <itc:section>
            <h2>Windows Systems</h2>
            <itc:parameter name="className">WindowsMachineService</itc:parameter>
            <itc:select name="ComputerService.Host" oper="match">${context/BOBJ_EnterpriseNode.ServerName}*</itc:select>
            <itc:select name="OBJECT_MaintenanceMode">false</itc:select>
            <h3>${context/OBJECT_Name}</h3>
            <!-- For availability , used physical memory , cpu utilization -->
            <itc:variable name="attributes">'OBJECT_Availability','WindowsMetric_PerfOS_Memory.PercentCommittedBytesInUse'</itc:variable>
            <itc:section>
               <itc:parameter name="className">Threshold</itc:parameter>
               <itc:select name="THRESHOLD_ApplicationId">${context/APPLICATION_SERVICE.ApplicationId}</itc:select>
               <itc:select name="THRESHOLD_AttributeName" oper="IN">${report/attributes}</itc:select>
               <h4>${context/OBJECT_Name}</h4>
               <itc:chart>
                  <itc:parameter name="OBJECT_Id">${context/OBJECT_Id}</itc:parameter>
                  <itc:parameter name="title">false</itc:parameter>
                  <itc:parameter name="timeScale">HOUR</itc:parameter>
                  <itc:parameter name="range">H12</itc:parameter>
                  <itc:parameter name="fit">width</itc:parameter>
                  <itc:parameter name="valuesOnly">true</itc:parameter>
                  <itc:parameter name="annotations">false</itc:parameter>
               </itc:chart>
            </itc:section>
            <!-- For CPU utilization -->
            <itc:section>
               <itc:parameter name="className">Threshold</itc:parameter>
               <itc:select name="THRESHOLD_ApplicationId">${context/APPLICATION_SERVICE.ApplicationId}</itc:select>
               <itc:select name="THRESHOLD_AttributeName" oper="IN">'WindowsMetric_PerfOS_Processor.PercentProcessorTime'</itc:select>
               <h4>CPU Utilization</h4>
               <itc:chart>
                  <itc:parameter name="OBJECT_Id">${context/OBJECT_Id}</itc:parameter>
                  <itc:parameter name="title">false</itc:parameter>
                  <itc:parameter name="timeScale">HOUR</itc:parameter>
                  <itc:parameter name="range">H12</itc:parameter>
                  <itc:parameter name="fit">width</itc:parameter>
                  <itc:parameter name="valuesOnly">true</itc:parameter>
                  <itc:parameter name="annotations">false</itc:parameter>
               </itc:chart>
            </itc:section>
            <!-- For file system -->
            <h4>File System</h4>
            <itc:section>
               <itc:parameter name="className">WindowsLogicalDisk</itc:parameter>
               <itc:select name="APPLICATION_SERVICE.ApplicationId">${context/APPLICATION_SERVICE.ApplicationId}</itc:select>
               <itc:select name="WindowsLogicalDisk.DriveType">3</itc:select>
               <h5>${context/WindowsLogicalDisk.VolumeName} Free Space</h5>
               <itc:threshold>
                  <itc:parameter name="THRESHOLD_ObjectId">${context/OBJECT_Id}</itc:parameter>
                  <itc:parameter name="THRESHOLD_AttributeName">WindowsLogicalDisk.FreeSpace</itc:parameter>
                  <itc:parameter name="title">false</itc:parameter>
                  <itc:parameter name="timeScale">HOUR</itc:parameter>
                  <itc:parameter name="range">H12</itc:parameter>
                  <itc:parameter name="fit">width</itc:parameter>
                  <itc:parameter name="valuesOnly">true</itc:parameter>
                  <itc:parameter name="annotations">false</itc:parameter>
               </itc:threshold>
            </itc:section>
         </itc:section>
      </itc:section>
   </itc:section>
</itc:report>
