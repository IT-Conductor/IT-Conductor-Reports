<itc:report xmlns:itc="urn:itconductor">
  <itc:parameter name="fontSize">4</itc:parameter>
  <h1>Production SAP Systems Availability Report</h1>

<!-- this section is processing SAP system -->
  <itc:section>
    <itc:parameter name="OBJECT_ClassName">SAP</itc:parameter>
    <itc:parameter name="className">SAP</itc:parameter>
    <itc:select name="OBJECT_CustomerId">${report/OBJECT_CustomerId}</itc:select>
    <itc:select name="APPLICATION_Role">PROD</itc:select>
    <itc:select name="OBJECT_MaintenanceMode">false</itc:select>

    <pbr />
    <h2>${context/OBJECT_Name}</h2>
    <itc:threshold>
      <itc:parameter name="THRESHOLD_ObjectId">${context/OBJECT_Id}</itc:parameter>
      <itc:parameter name="THRESHOLD_AttributeName">OBJECT_Availability</itc:parameter>
      <itc:parameter name="table">false</itc:parameter>
      <itc:parameter name="valuesOnly">true</itc:parameter>
      <itc:parameter name="annotations">false</itc:parameter>
      <itc:parameter name="width">100%</itc:parameter>
      <itc:parameter name="timeScale">MONTH</itc:parameter>
      <itc:parameter name="range">M12</itc:parameter>
    </itc:threshold>
    <itc:threshold>
      <itc:parameter name="THRESHOLD_ObjectId">${context/OBJECT_Id}</itc:parameter>
      <itc:parameter name="THRESHOLD_AttributeName">OBJECT_Availability</itc:parameter>
      <itc:parameter name="table">true</itc:parameter>
      <itc:parameter name="valuesOnly">true</itc:parameter>
      <itc:parameter name="annotations">false</itc:parameter>
      <itc:parameter name="timeScale">MONTH</itc:parameter>
      <itc:parameter name="range">M12</itc:parameter>
    </itc:threshold>
  </itc:section>

<!-- this section is processing SAP JAVA system -->
  <itc:section>
    <itc:parameter name="OBJECT_ClassName">JMXP4</itc:parameter>
    <itc:parameter name="className">JMXP4</itc:parameter>
    <itc:select name="OBJECT_CustomerId">${report/OBJECT_CustomerId}</itc:select>
    <itc:select name="APPLICATION_Role">PROD</itc:select>

    <pbr />
    <h2>${context/OBJECT_Name}</h2>
    <itc:threshold>
      <itc:parameter name="THRESHOLD_ObjectId">${context/OBJECT_Id}</itc:parameter>
      <itc:parameter name="THRESHOLD_AttributeName">OBJECT_Availability</itc:parameter>
      <itc:parameter name="table">false</itc:parameter>
      <itc:parameter name="valuesOnly">true</itc:parameter>
      <itc:parameter name="annotations">false</itc:parameter>
      <itc:parameter name="width">100%</itc:parameter>
      <itc:parameter name="timeScale">MONTH</itc:parameter>
      <itc:parameter name="range">M12</itc:parameter>
    </itc:threshold>
    <itc:threshold>
      <itc:parameter name="THRESHOLD_ObjectId">${context/OBJECT_Id}</itc:parameter>
      <itc:parameter name="THRESHOLD_AttributeName">OBJECT_Availability</itc:parameter>
      <itc:parameter name="table">true</itc:parameter>
      <itc:parameter name="valuesOnly">true</itc:parameter>
      <itc:parameter name="annotations">false</itc:parameter>
      <itc:parameter name="timeScale">MONTH</itc:parameter>
      <itc:parameter name="range">M12</itc:parameter>
    </itc:threshold>
  </itc:section>

</itc:report>
